<body>
    <div>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">YCH</a>
                </div>
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Excels" asp-action="Index">Upload Excel</a></li>
                    <li><a asp-controller="Drivers" asp-action="Index">Danh sách tài xế</a></li>
                    <li class="dropdown">
