@model IEnumerable<CalculateSalaryOfFleet.Models.MoneyByBigCar>

@{
    ViewData["Title"] = "MoneyByBigCar";
    Layout = "~/Views/Shared/_frontEnd.cshtml";
}

    <div class="container">
        <h2>Cấu hình tiền theo xe lớn</h2>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Thứ tự chuyến
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MoneyOfServiceLevelHcmc)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MoneyOfServiceLevelHcmp)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var i = 1;

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TripNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MoneyOfServiceLevelHcmc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MoneyOfServiceLevelHcmp)
                        </td>
                        <td>
                            <a asp-action="EditMoneyByBigCar" asp-route-id="@item.TripNo">Sửa</a> |
                            <a asp-action="Delete" asp-route-id="@item.TripNo">Xóa</a>
                        </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>

