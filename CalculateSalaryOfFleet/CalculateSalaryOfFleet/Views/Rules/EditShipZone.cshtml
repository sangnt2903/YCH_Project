@model CalculateSalaryOfFleet.Models.TypeJob

@{
    ViewData["Title"] = "EditShipZone";
    Layout = "~/Views/Shared/_frontEnd.cshtml";
}

    <div class="container">

        <h2>Cấu hình</h2>

        <h4>Cấu hình Service Level</h4>
        <hr />
        <div class="col-md-4">
            <form asp-action="EditShipZone">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="TypeJobNo" />
                <div class="form-group">
                    <label class="control-label">Service level</label>
                    <input asp-for="TypeJob1" class="form-control" />
                    <span asp-validation-for="TypeJob1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Mô tả</label>
                    <input asp-for="TypeJobDescription" class="form-control" />
                    <span asp-validation-for="TypeJobDescription" class="text-danger"></span>
                </div>
                <div class="row">
                    <span>
                        <a asp-action="ShipZone" class="btn btn-warning">Quay lại trang</a>
                    </span>
                    <span class="form-group">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                    </span>
                </div>
            </form>
        </div>
    </div>


