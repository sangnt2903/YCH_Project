@model CalculateSalaryOfFleet.Models.TypeJob

@{
    ViewData["Title"] = "EditShipZone";
    Layout = "~/Views/Shared/_frontEnd.cshtml";
}

    <div class="container">

        <h2>Cấu hình</h2>

        <h4>Cấu hình shipzone</h4>
        <hr />
        <div class="col-md-4">
            <form asp-action="EditShipZone">
