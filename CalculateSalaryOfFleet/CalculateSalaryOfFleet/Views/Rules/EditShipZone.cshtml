                </div>
                <div class="form-group">
                    <label asp-for="TypeJobDescription" class="control-label"></label>
                    <input asp-for="TypeJobDescription" class="form-control" />
                    <span asp-validation-for="TypeJobDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

<div>
