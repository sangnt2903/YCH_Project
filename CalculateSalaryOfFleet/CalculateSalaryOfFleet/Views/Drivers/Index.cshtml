@model IEnumerable<CalculateSalaryOfFleet.Models.Drivers>

@{
    ViewData["Title"] = "Danh sách chuyến hàng";
    FleetsTripsContext ctx = new FleetsTripsContext();
    string dateRerport = ctx.Orders.First().AtdcompleteDate.Month.ToString() + "/" + ctx.Orders.First().AtdcompleteDate.Year.ToString();
}

<div style="text-align:center"><h2>Danh sách tài xế tham gia vận chuyển</h2></div>
<div class="container">
    <table id="datatable" class="display nowrap" width="100%">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Mã tài xế</th>
                <th scope="col">Tên tài xế</th>
                <th scope="col">SDT</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @{
                var i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@i</th>
                        <td>@item.DriverIcno</td>
                        <td>@item.DriverName</td>
                        <td>@item.DriverPhone</td>
                        <td>
                            <a name="viewAllJobsByDate" asp-action="GetAllJobs" asp-route-driverICNo="@item.DriverIcno" class="glyphicon glyphicon-eye-open"></a>
                        </td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#datatable').DataTable({
            "scrollX": true
        });
    });
</script>



